<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
   <p><%= notice %></p>
   <h1>写真一覧</h1>
   <%= link_to "写真を投稿する", new_picture_path, class: 'btn btn-default' %>
   <% @pictures.each do |picture| %>
   <div class="row">
     <p>タイトル：<%= picture.title %></p>
     <p>本文：<%= picture.content %></p>
     <p>写真：<%= picture.image %></p>
     <%= link_to "編集", edit_pictures_path(picture.id), class: 'btn btn-default btn-sm btn-success'%>
     <%= link_to "削除", pictures_path(picture.id), method: :delete, data: { confirm: '本当に削除して良いですか'}, class: 'btn btn-default btn-sm btn btn-danger' %>
   </div>
   <% end %>
  </div>
</div>
