<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h3>以下の内容で、送信する。</h3>
    <%= form_for(@picture) do |f| %>
      <%= f.hidden_field :title %>
      <%= f.hidden_field :content %>
      <%= f.hidden_field :image %>
      <P>タイトル：<%= @picture.title %></p>
      <p>本文：<%= @picture.content %></p>
      <p><%= @picture.image %></p>
      <%= f.submit "登録する",class: 'btn btn-primary btn-block' %>
    <% end %>
    <%= form_for(@picture, url: new_pictures_path, method: 'get') do |f| %>
      <%= f.hidden_field :title %>
      <%= f.hidden_field :content %>
      <%= f.hidden_field :image %>
      <%= link_to '戻る', name: 'back', class: 'btn btn-default btn-block' %>
    <% end %>
  </div>
</div>
