<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
   <p><%= notice %></p>

   <h1>写真一覧</h1>
   <%= link_to "写真を投稿する", new_picture_path, class: 'btn btn-default' %>
   <% @pictures.each do |picture| %>
   <div class="row">
     <h3>投稿者名：<%= picture.user.name %></h3>
     <h4>タイトル：<%= picture.title %></h4>
     <p>コメント：<%= picture.content %></p>
     <p><%= image_tag picture.image, class: "image-post" %></p>
     <%= link_to "編集", edit_picture_path(picture.id), class: 'btn btn-default btn-sm btn-success' %>
     <%= link_to "削除", picture_path(picture.id), method: :delete, data: { confirm: '本当に削除して良いですか'}, class: 'btn btn-default btn-sm btn btn-danger' %>
   </div>
   <% end %>
  </div>
</div>
